
<div class="container">
  
  <div class="m-md-5 m-1 p-md-5 p-3" style="background-color:#b3daff;border-radius:25px;">
    
    <div class="row">
    
    <div class="col-md-8">
    <p><strong>First Name</strong>: <%= @friend.first_name %></p>
    <p><strong>Email</strong>: <%= @friend.email %></p>
    <p><strong>Phone</strong>: <%= @friend.phone %></p>
    <p><strong>Twitter</strong>: <%= @friend.twitter %></p>   
    </div>
    <div class="col-md-4">
      <%= link_to "Edit this friend", edit_friend_path(@friend), class: "btn btn-warning w-100 m-3" %> <br/>

      <%= button_to "Destroy this friend", @friend, method: :delete, class: "btn btn-danger w-100 m-3" %>
    </div>

    </div>
  </div>

</div>


