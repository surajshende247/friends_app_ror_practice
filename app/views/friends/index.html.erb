<p style="color: green"><%= notice %></p>

<h1>Friends</h1>

<div id="friends">
  <table class="table table-striped">
  <tr>
      <th>Full Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Twitter</th>
      <th colspan="3">Actions</th>
  </tr>
  <% @friends.each do |friend| %>   
    <tr>
      <td>
        <%= friend.first_name %> 
        <%= friend.last_name %>        
      </td>
      <td>
        <%= friend.email %>
      </td>
      <td>
        <%= friend.phone %>
      </td>
      <td>
        <%= friend.twitter %>
      </td>
      <td>
        <%= link_to "View", friend,  class: "btn btn-primary" %>
      </td> 
      <td>
        <%= link_to "Edit", edit_friend_path(friend), class: "btn btn-warning" %>
      </td> 
      <td>
        <%= button_to "Delete",friend, method: :delete, class: "btn btn-danger" %>
      </td>      
    </tr>
  <% end %>
  </table>
</div>
